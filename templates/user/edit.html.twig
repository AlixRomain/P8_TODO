{% extends 'base.html.twig' %}

{% block header_title %}<h1>Modifier <strong>{{ user.username }}</strong></h1>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="col-md-7 col-lg-8">
        {{ form_start(form, {'action' : path('user_edit', {'id' : user.id}), 'method': 'GET'}) }}
        <h4 class="mb-3">Changer un utilisateur</h4>
        <form class="needs-validation" novalidate="">
            <div class="row g-3">
                <div class="col-12">
                    {{ form_row(form.name) }}
                    <div class="invalid-feedback">
                        Valid last name is required.
                    </div>
                </div>
                <div class="col-12">
                    {{ form_row(form.role) }}
                    <div class="invalid-feedback">
                        Valid last name is required.
                    </div>
                </div>
                <div class="col-12">
                    {{ form_row(form.email) }}
                    <div class="invalid-feedback">
                        Please enter a valid email address for shipping updates.
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success pull-right mt-3">Modifier</button>
        </form>
        {{ form_end(form) }}
    </div>
{% endblock %}
